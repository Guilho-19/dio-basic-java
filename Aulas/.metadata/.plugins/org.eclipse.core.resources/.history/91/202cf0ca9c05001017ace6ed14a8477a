package aulaIDE;

public class Operadores {
	public static void main (String[] args) {
		String nomeCompleto = "Linguagem " + "Java";
		System.out.println(nomeCompleto);
		
		int numero = 5;
		System.out.println(- numero);
		System.out.println(numero);
		
		numero = - numero;
		System.out.println(numero);
		numero = numero * -1; // operação para converter um número negativo para positivo
		System.out.println(numero);
		
		int numero1 = 5;
		numero1 ++;
		System.out.println(numero1 ++);  // incremento pós print
		System.out.println(numero1);     
		System.out.println(++ numero1);  // incremento pré print
		
		System.out.println(numero1 --);  // decremento pós print
		System.out.println(numero1);
		System.out.println(-- numero1);  // decremento pré print
		
		boolean variavel = true;
		System.out.println(!variavel);
	}
}